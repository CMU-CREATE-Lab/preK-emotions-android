<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c4181818">

    <TextView
        android:id="@+id/textViewOverlayTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="203dp"
        android:layout_marginStart="203dp"
        android:layout_marginTop="113dp"
        android:fontFamily="@font/source_sans_pro"
        android:lines="3"
        android:text="@string/overlay_placeholder"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewNo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="351dp"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewOverlayTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_thumb_down" />

    <ImageView
        android:id="@+id/imageViewYes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="351dp"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewOverlayTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_thumb_up" />

</android.support.constraint.ConstraintLayout>