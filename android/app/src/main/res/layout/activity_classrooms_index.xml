<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4" >

        <android.support.constraint.ConstraintLayout
            android:id="@+id/appHeader"
            android:layout_width="0dp"
            android:layout_height="65sp"
            android:background="#5bddc5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="158sp"
                android:layout_height="31sp"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/ic_mindfulnest_header_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageInfo"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/ic_mindfulnest_header_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageStudent"
                android:layout_width="36sp"
                android:layout_height="36sp"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/ic_mindfulnest_header_student_section"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageInfo"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="205sp"
            android:layout_height="0dp"
            android:background="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appHeader" />

        <GridView
            android:id="@+id/classroomsGridView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="40sp"
            android:columnWidth="165sp"
            android:gravity="center"
            android:horizontalSpacing="25sp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/appHeader" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNewClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</android.support.design.widget.CoordinatorLayout>